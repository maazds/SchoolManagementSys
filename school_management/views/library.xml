<odoo>
    <data>
        <record model="ir.ui.view" id="library_management_tree">
            <field name="name">Library Data Management</field>
            <field name="model">library.management</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="book_name"/>
                    <field name="book_author"/>
                    <field name="book_edition"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="library_management_form">
            <field name="name">Books Data Management</field>
            <field name="model">library.management</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Enter Book Details" col="3">
                            <group>
                                <field name="book_id"/>
                            </group>
                            <group>
                                <field name="book_name"/>
                            </group>
                            <group>
                                <field name="book_author"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="book_release_date"/>
                            </group>
                            <group>
                                <field name="book_edition"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--ACTION-->
        <record model="ir.actions.act_window" id="library_management_action">
            <field name="name">Library DataBase</field>
            <field name="res_model">library.management</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--MENU-->
        <menuitem name="Library Database" id="library_menu" parent="school_management.menu_root"/>
        <menuitem name="Library" id="library_menu_db" parent="library_menu"
                  action="library_management_action"/>
    </data>
</odoo>